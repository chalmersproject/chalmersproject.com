{
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": [
    ".cache",
    ".devcontainer",
    ".husky",
    "build",
    "bin",
    "db",
    "log",
    "node_modules",
    "public/assets",
    "sorbet",
    "storage",
    "test",
    "tmp",
    "vendor"
  ],

  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*", "./lib/*"]
    },

    // Remix takes care of building everything in `remix build`.
    "noEmit": true
  }
}
