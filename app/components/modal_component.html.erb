<div
  class="<%= component_class_names %>"
  data-xt-overlay="{ duration: 500 }"
>
  <span class="<%= component_class_name("trigger") %>" data-xt-overlay-element>
    <%= trigger %>
  </span>
  <div
    class="modal_component-overlay xt-overlay group"
    aria-label="Modal"
    data-xt-overlay-target
  >
    <div
      class="xt-backdrop z-below bg-gray-800 opacity-0 transition-opacity ease-out-quint group-in:duration-300 group-out:duration-100 group-in:opacity-25"
    >
    </div>
    <div class="xt-overlay-container max-w-lg">
      <div
        class="xt-overlay-inner my-8 transition opacity-0 scale-95 group-in:opacity-100 group-in:scale-100 group-out:scale-105"
      >
        <div class="xt-card rounded-lg shadow-xl text-gray-900 xt-links-default bg-white">
          <button
            class="xt-button xt-dismiss absolute top-1 right-1 p-0 bg-transparent rounded-full text-gray-400 transition-colors hover:text-gray-500"
            aria-label="Close"
          >
            <%= heroicon "x-circle", variant: "solid" %>
          </button>
          <div class="p-4 pt-6 flex flex-col gap-2">
            <% if header? %>
              <header>
                <%= header %>
              </header>
            <% end %>
            <% if body? %>
              <main class="text-sm">
                <%= body %>
              </main>
            <% end %>
            <% if footer? %>
              <footer>
                <%= footer %>
              </footer>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
