{
  "name": "chalmersproject.com",
  "version": "0.1.0",
  "private": true,
  "license": "",
  "sideEffects": false,
  "scripts": {
    "dev": "bundle exec foreman start -f Procfile.dev",
    "dev:rails": "yarn start:rails",
    "dev:remix": "PORT=8080 remix dev",
    "dev:css": "tailwindcss -w -i ./app/assets/config/root.css -o ./app/assets/build/root.css",
    "console": "bundle exec rails console",
    "db": "bundle exec rails db --include-password",
    "routes": "bundle exec rails routes",
    "migrate": "bundle exec rails db:migrate",
    "migrate:status": "bundle exec rails db:migrate:status",
    "migrate:rollback": "bundle exec rails db:rollback",
    "migrate:up": "bundle exec rails db:migrate:up",
    "migrate:down": "bundle exec rails db:migrate:down",
    "migrate:redo": "bundle exec rails db:migrate:redo",
    "annotate": "run-p -l annotate:models annotate:routes",
    "annotate:models": "yarn annotate:model",
    "annotate:model": "bundle exec annotate --position after",
    "annotate:routes": "bundle exec annotate --routes --position after",
    "gen": "bundle exec rails generate",
    "gen:srb": "run-s -l gen:srb:gem gen:srb:dsl",
    "gen:srb:gems": "yarn gen:srb:gem",
    "gen:srb:gem": "bundle exec tapioca gem",
    "gen:srb:dsl": "bundle exec tapioca dsl",
    "fmt": "yarn fmt:partial .",
    "fmt:partial": "prettier --write",
    "lint": "run-p -l lint:ts lint:eslint lint:srb lint:rubocop",
    "lint:ts": "tsc --noEmit",
    "lint:ts:partial": "tsc-files --noEmit",
    "lint:eslint": "yarn lint:eslint:partial .",
    "lint:eslint:partial": "eslint --cache --ext .js,.jsx,.ts,.tsx",
    "lint:srb": "bundle exec srb tc",
    "lint:rubocop": "bundle exec rubocop",
    "lint:rubocop:partial": "bundle exec rubocop --force-exclusion",
    "fix": "run-s -l fix:eslint fix:rubocop",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:eslint:partial": "yarn lint:eslint:partial --fix",
    "fix:rubocop": "yarn lint:rubocop --auto-correct-all",
    "fix:rubocop:partial": "yarn lint:rubocop:partial --auto-correct",
    "add:gem": "bundle add",
    "install:remix": "remix setup node",
    "install:gems": "bundle install",
    "install:husky": "husky install",
    "prepare": "run-p -l install:gems install:husky",
    "postinstall": "yarn install:remix",
    "build": "run-p -l build:web build:rails",
    "build:web": "run-s -l build:css build:remix",
    "build:css": "tailwindcss -m -i ./app/assets/config/root.css -o ./app/assets/build/root.css",
    "build:remix": "remix build",
    "build:rails": "bundle exec rails assets:precompile",
    "start": "bundle exec foreman start",
    "start:rails": "PORT=3000 bundle exec rails server -b 0.0.0.0",
    "start:remix": "PORT=8080 remix-serve build"
  },
  "dependencies": {
    "@mantine/core": "^3.6.3",
    "@mantine/dates": "^3.6.3",
    "@mantine/dropzone": "^3.6.3",
    "@mantine/hooks": "^3.6.3",
    "@mantine/modals": "^3.6.3",
    "@mantine/notifications": "^3.6.3",
    "@mantine/rte": "^3.6.3",
    "@mantine/ssr": "^3.6.3",
    "@rails/ujs": "^7.0.1",
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "@remix-run/server-runtime": "^1.1.3",
    "dayjs": "^1.10.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.3",
    "tailwindcss": "^3.0.17"
  },
  "devDependencies": {
    "@prettier/plugin-ruby": "^2.0.0",
    "@remix-run/dev": "^1.1.3",
    "@remix-run/node": "^1.1.3",
    "@types/rails__ujs": "^6.0.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/tailwindcss": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "release-it": "^14.12.4",
    "tsc-files": "^1.1.3",
    "typescript": "^4.1.2"
  }
}
