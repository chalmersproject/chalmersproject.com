{
  "name": "chalmersproject.com",
  "version": "0.1.0",
  "private": true,
  "license": "",
  "sideEffects": false,
  "scripts": {
    "start": "bundle exec rails server",
    "console": "bundle exec rails console",
    "db": "bundle exec rails db",
    "db:migrate": "bundle exec rails db:migrate",
    "generate": "yarn generate:sorbet",
    "generate:sorbet": "run-s -l generate:sorbet:gem generate:sorbet:dsl",
    "generate:sorbet:gem": "bundle exec tapioca gem",
    "generate:sorbet:dsl": "bundle exec tapioca dsl",
    "format": "yarn format:partial .",
    "format:partial": "prettier --write",
    "lint": "run-p -l lint:typescript lint:eslint lint:sorbet lint:rubocop",
    "lint:typescript": "tsc --noEmit",
    "lint:eslint": "yarn lint:eslint:partial .",
    "lint:eslint:partial": "eslint --cache --ext .js,.jsx,.ts,.tsx",
    "lint:sorbet": "bundle exec srb tc",
    "lint:rubocop": "bundle exec rubocop --force-exclusion",
    "fix": "run-s -l fix:eslint fix:rubocop",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:eslint:partial": "yarn lint:eslint:partial --fix",
    "fix:rubocop": "yarn lint:rubocop --auto-correct-all",
    "remix:dev": "remix dev",
    "remix:build": "remix build",
    "remix:start": "remix-serve build",
    "postinstall": "run-p -l install:remix install:gem",
    "install:remix": "remix setup node",
    "install:gem": "bundle install",
    "prepare": "husky install"
  },
  "dependencies": {
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "@remix-run/server-runtime": "^1.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.3"
  },
  "devDependencies": {
    "@prettier/plugin-ruby": "^2.0.0",
    "@remix-run/dev": "^1.1.3",
    "@remix-run/node": "^1.1.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "release-it": "^14.12.4",
    "typescript": "^4.1.2"
  }
}
