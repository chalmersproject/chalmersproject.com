{
  "name": "chalmersproject.com",
  "version": "0.1.0",
  "private": true,
  "license": "",
  "sideEffects": false,
  "scripts": {
    "start": "bundle exec rails server",
    "console": "bundle exec rails console",
    "db": "bundle exec rails db",
    "db:migrate": "bundle exec rails db:migrate",
    "gen": "bundle exec rails generate",
    "gen:srb": "run-s -l gen:srb:gem gen:srb:dsl",
    "gen:srb:gems": "yarn gen:srb:gem",
    "gen:srb:gem": "bundle exec tapioca gem",
    "gen:srb:dsl": "bundle exec tapioca dsl",
    "fmt": "yarn fmt:partial .",
    "fmt:partial": "prettier --write",
    "lint": "run-p -l lint:ts lint:eslint lint:srb lint:rubocop",
    "lint:ts": "tsc --noEmit",
    "lint:ts:partial": "tsc-files --noEmit",
    "lint:eslint": "yarn lint:eslint:partial .",
    "lint:eslint:partial": "eslint --cache --ext .js,.jsx,.ts,.tsx",
    "lint:srb": "bundle exec srb tc",
    "lint:rubocop": "bundle exec rubocop",
    "lint:rubocop:partial": "bundle exec rubocop --force-exclusion",
    "fix": "run-s -l fix:eslint fix:rubocop",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:eslint:partial": "yarn lint:eslint:partial --fix",
    "fix:rubocop": "yarn lint:rubocop --auto-correct-all",
    "fix:rubocop:partial": "yarn lint:rubocop:partial --auto-correct",
    "build": "run-p -l build:remix build:rails",
    "build:remix": "remix build",
    "build:rails": "bundle exec rails assets:precompile",
    "remix:dev": "remix dev",
    "remix:start": "remix-serve build",
    "install:remix": "remix setup node",
    "install:gems": "bundle install",
    "postinstall": "run-p -l install:remix install:gems",
    "prepare": "husky install"
  },
  "dependencies": {
    "@rails/ujs": "^7.0.1",
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "@remix-run/server-runtime": "^1.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.3"
  },
  "devDependencies": {
    "@prettier/plugin-ruby": "^2.0.0",
    "@remix-run/dev": "^1.1.3",
    "@remix-run/node": "^1.1.3",
    "@types/rails__ujs": "^6.0.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "release-it": "^14.12.4",
    "tsc-files": "^1.1.3",
    "typescript": "^4.1.2"
  }
}
